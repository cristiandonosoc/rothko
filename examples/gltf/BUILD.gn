executable("gltf_viewer") {
  output_name = "gltf"

  sources = [
    "main.cc",
  ]

  deps = [
    "//rothko:game",
    "//third_party/tiny_gltf",
    "//rothko/window:sdl_opengl",
  ]
}

executable("gltf2rothko") {
  sources = [
    "gltf2rothko.cc",
  ]

  deps = [
    "//rothko:game",
  ]
}

group("gltf") {
  deps = [
    ":gltf_viewer",
    ":gltf2rothko",
  ]
}
