# See the buildconfig file (set in .gn) for then *_enabled variables.

if (sdl_enabled) {
  if (opengl_enabled) {
    source_set("sdl_opengl") {

      public_configs = [
        ":window_macros",
      ]

      public_deps = [
        ":window_common",
        "//rothko/window/sdl:sdl_opengl",
      ]
    }
  }

  if (vulkan_enabled) {
    source_set("sdl_vulkan") {

      public_configs = [
        ":window_macros",
      ]

      public_deps = [
        ":window_common",
        "//rothko/window/sdl:sdl_vulkan",
      ]
    }
  }
}

source_set("window_common") {
  public = [
    "window.h",
  ]
}

config("window_macros") {
  defines = []
  if (sdl_enabled) {
    defines += [ "ROTHKO_SDL_ENABLED" ]
  }
}
